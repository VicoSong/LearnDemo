<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.swk.ssh.beans">
    <class name="UserBean" table="users">
        <id name="userId" column="userId" type="java.lang.Integer">
            <generator class="native"/>
        </id>
        <property name="username" column="username" type="java.lang.String" 
        	not-null="true" length="50"></property>
        <property name="password" column="password" type="java.lang.String" 
        	not-null="true" length="20"></property>
        <property name="gender" column="gender" type="java.lang.Integer" 
        	not-null="true" length="1"></property>
    </class>
</hibernate-mapping>